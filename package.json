{
  "name": "hello-books",
  "version": "1.0.0",
  "description": "Hello-Books is a simple application that helps manage a library and its processes like stocking, tracking and renting of books.",
  "main": "app.js",
  "jest": {
    "verbose": true,
    "roots": [
      "client/"
    ],
    "collectCoverageFrom": [
      "client/src/**/*.{js|jsx}"
    ],
    "setupTestFrameworkScriptFile": "./client/tests/setup.js",
    "setupFiles": [
      "./client/tests/__mocks__/localStorageMock.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/e2eTest/"
    ],
    "globals": {
      "Materialize": true
    },
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2|gif)$": "identity-obj-proxy"
    }
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "babel-node app.js",
    "start:dev": "babel-watch app.js",
    "build": "webpack --env=production --progress --colors",
    "build:dev": "webpack-dev-server --open",
    "test": "NODE_ENV=test mocha --timeout 5000 --compilers js:babel-register server/tests/**.js",
    "coverage": "NODE_ENV=test nyc --reporter=lcov --reporter=text --reporter=lcovonly mocha --compilers js:babel-register server/tests/**.js",
    "client-test": "jest",
    "client-coverage": "jest --coverage",
    "e2e-test": "npm run db:reset && nightwatch",
    "ct:watch": "jest --coverage --watch",
    "test:db": "sequelize db:migrate",
    "db:migrate": "DATABASE_URL=$DATABASE_URL sequelize db:migrate",
    "db:seed": "DATABASE_URL=$DATABASE_URL sequelize db:seed:all",
    "heroku-postbuild": "NODE_ENV=production && NODE_ENV=production sequelize db:migrate:undo:all && NODE_ENV=production sequelize db:migrate && NODE_ENV=production npm run db:seed && npm run build",
    "db:reset": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "db:reset-test": "NODE_ENV=test sequelize db:migrate:undo:all && NODE_ENV=test sequelize db:migrate && NODE_ENV=test sequelize db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ekundayo-ab/hello-books.git"
  },
  "keywords": [
    "books",
    "library",
    "borrow"
  ],
  "author": "Ekundayo Abiona",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ekundayo-ab/hello-books/issues"
  },
  "nyc": {
    "exclude": [
      "server/tests"
    ]
  },
  "homepage": "https://github.com/ekundayo-ab/hello-books#readme",
  "dependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.26.0",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.1",
    "babel-plugin-transform-remove-console": "^6.8.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-watch": "^2.0.7",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.17.2",
    "classnames": "^2.2.5",
    "css-loader": "0.28.4",
    "dotenv": "4.0.0",
    "eslint": "^4.5.0",
    "express": "^4.15.4",
    "file-loader": "0.11.2",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^8.0.1",
    "lodash": "^4.17.4",
    "materialize-css": "^0.100.2",
    "moment": "^2.19.1",
    "morgan": "^1.8.2",
    "node-sass": "^4.7.2",
    "nodemailer": "^4.4.1",
    "pg": "^7.2.0",
    "pg-hstore": "^2.3.2",
    "promise": "8.0.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-dropzone": "^4.1.3",
    "react-google-login": "^3.0.1",
    "react-materialize": "^1.0.14",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "sequelize": "^4.8.0",
    "sequelize-cli": "^2.8.0",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "style-loader": "0.18.2",
    "swagger-jsdoc": "^1.9.7",
    "sweetalert": "^2.0.5",
    "url-loader": "0.5.9",
    "webpack": "3.5.1"
  },
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "history": "^4.7.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "mocha": "^3.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "moxios": "^0.4.0",
    "nyc": "^11.1.0",
    "react-test-renderer": "^15.6.2",
    "redux-mock-store": "^1.3.0",
    "should": "^11.2.1",
    "supertest": "^3.0.0",
    "webpack-dev-server": "^2.9.5"
  }
}
